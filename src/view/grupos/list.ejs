        <body id="list-body">
            <h1 class="title">TODOS OS GRUPOS</h1>
            <h3 style="text-align: center; color: #cfcfcf;">BLOOD-WEB-CHAT Kau√£ e Christian</h3>
            <div class="w3-container" style="padding-left: 10%; padding-right: 10%;">
                <table class="table table-dark" style="background-color: rgba(0, 0, 0, 0.425);">
                    <tr>
                        <th style="color: #f00000a9">NOME DO GRUPO</th>
                        <th style="color: #f00000a9">QUANTIDADE DE MEMBROS</th>
                    </tr>
                    <% grupos.forEach(grupo=> { %>
                        <tr style="color: #d3d3d3b2;">
                            <td>
                                <%= grupo.nome %>
                            </td>
                            <td>
                                <%= grupo.membros %>
                            </td>
                        </tr>
                        <% }) %>
                </table>
                <div class="links">
                    <% for (let i = 1; i <= Math.ceil(total[0].count/5); i++) { %>
                        <a class="pages" href="/grupos/?page=<%= i %>">
                            <%= i %>
                        </a>
                        <% } %>
                </div>
            </div>
        </body>