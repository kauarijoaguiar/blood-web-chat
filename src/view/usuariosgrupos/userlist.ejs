<%- include('../includes/head') %>
<%- include('../includes/navbar') %>
<body id="list-body">
    <div class="w3-container" style="padding-left: 10%; padding-right: 10%;">
        <h1 class="title">MEUS GRUPOS</h1>
        <table class="table table-dark" style="background-color: rgba(0, 0, 0, 0.425);">
            <tr style="color: #f00000a9">
                <th>NOME DO GRUPO</th>
            <% grupos.forEach(grupo=> { %>
            <tr style="color: #d3d3d3b2;">
                <td> <%= grupo.nome %> </td>
                <td>
                    <a href="/grupos/<%= grupo.idgrupo %>" class="txt1">CONVERSAS</a>                                            
                </td>
            </tr>
            <% }) %>
         </table>
    </div>
</body>